pipeline {
    agent any
    
    stages {
        stage('Build') {
            steps {
                echo 'Building the code' 
            }
            post{
                success{
                    mail to: "kali.linuz09@gmail.com",
                    subject: "This is sent from Build Pipeline",
                    body: "Build was successful buddy"
                }
            }
        }
    }
        
}

